---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
  title="Seguros Toyota | Derka y Vargas"
  theme_color="#EB0A1E"
  image="https://i.imgur.com/AabFmC0.png"
>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center text-white">
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/50">
        <Image
          src="/images/seguros/hero-banner.jpg"
          alt="Seguros Toyota Banner"
          class="w-full h-full object-cover -z-10 ukiyo"
          width={1920}
          height={1080}
          loading={"lazy"}
          decoding={"async"}
        />
      </div>
      <div data-aos="fade-up" class="container mx-auto px-4 text-center z-10">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Seguros Toyota
        </h1>
        <p class="text-xl mb-8">
          Protegé tu Toyota con las mejores coberturas del mercado
        </p>
        <a
          href="#contacto"
          class="inline-block bg-red-600 hover:bg-red-700 text-white px-8 py-4 rounded-full transition-colors duration-300"
        >
          Conocé más
        </a>
      </div>
    </section>

    <!-- Tipos de Seguros -->
    <section class="py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-red-600 mb-4">
            Nuestros Seguros
          </h2>
          <p class="text-xl text-gray-600">
            Soluciones aseguradoras adaptadas a tus necesidades
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-car-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Seguro de Vehículos</h3>
            <p class="text-gray-600">Daños totales o parciales, robo, responsabilidad civil y más.</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-heart-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Seguro de Vida</h3>
            <p class="text-gray-600">Protección integral para vos y tu familia.</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-building-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Seguros Patrimoniales</h3>
            <p class="text-gray-600">Cobertura para bienes personales o empresariales.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Beneficios -->
    <section class="bg-gray-50 py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-red-600 mb-4">
            Beneficios Exclusivos
          </h2>
          <p class="text-xl text-gray-600">Las ventajas de elegir Seguros Toyota</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-percent-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Descuentos Exclusivos</h3>
            <p class="text-gray-600">Hasta 40% en seguros de vehículos</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-customer-service-2-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Asistencia 24/7</h3>
            <p class="text-gray-600">Soporte inmediato cuando lo necesites</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-earth-line text-4xl text-red-600 mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Cobertura Nacional</h3>
            <p class="text-gray-600">Respaldo en todo el país</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Compañías Aseguradoras -->
    <section class="py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-red-600 mb-4">
            Compañías Asociadas
          </h2>
          <p class="text-xl text-gray-600">Trabajamos con las aseguradoras más reconocidas</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
          {
            ["Chubb", "Allianz", "Caja", "Zurich", "Sura"].map((company) => (
              <div class="bg-white rounded-xl shadow-lg p-6 text-center">
                <img
                  src={`/images/seguros/logos/${company.toLowerCase()}.png`}
                  alt={`Logo ${company}`}
                  class="h-12 mx-auto mb-4"
                />
                <h3 class="font-bold">{company}</h3>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="bg-gray-50 py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-red-600 mb-4">
            Preguntas Frecuentes
          </h2>
          <p class="text-xl text-gray-600">Resolvemos tus dudas sobre Seguros Toyota</p>
        </div>
        <div class="space-y-4 max-w-3xl mx-auto" id="faq-container">
          {[
            {
              question: "¿Qué cubre el seguro de vehículos?",
              answer: "Nuestro seguro cubre daños totales o parciales, robo, responsabilidad civil y asistencia en carretera 24/7."
            },
            {
              question: "¿Cómo puedo contratar un seguro?",
              answer: "Podés contratar tu seguro de manera fácil y rápida a través de nuestro formulario online o visitando nuestra concesionaria."
            },
            {
              question: "¿Qué documentación necesito?",
              answer: "Necesitarás tu DNI, licencia de conducir vigente y documentación del vehículo."
            }
          ].map((faq) => (
            <div class="faq-item bg-white rounded-xl shadow-lg">
              <button class="faq-button w-full text-left p-6 focus:outline-none hover:bg-gray-50 transition-colors duration-300 flex justify-between items-center">
                <span class="font-bold text-lg text-gray-800">{faq.question}</span>
                <i class="ri-arrow-down-s-line text-2xl text-red-600 transform transition-transform duration-300" />
              </button>
              <div class="faq-answer overflow-hidden">
                <p class="p-6 text-gray-600">{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section id="contacto" class="py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto max-w-2xl">
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
          <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Solicitá tu cotización</h2>
          <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label class="text-sm font-medium text-gray-700" for="nombre">Nombre completo</label>
              <input 
                type="text" 
                id="nombre" 
                name="nombre" 
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                placeholder="Tu nombre"
                required
              >
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-gray-700" for="telefono">Teléfono</label>
              <input 
                type="tel" 
                id="telefono" 
                name="telefono" 
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                placeholder="Tu teléfono"
                required
              >
            </div>
            <div class="md:col-span-2 space-y-2">
              <label class="text-sm font-medium text-gray-700" for="email">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                placeholder="Tu email"
                required
              >
            </div>
            <div class="md:col-span-2 space-y-2">
              <label class="text-sm font-medium text-gray-700" for="tipo_seguro">Tipo de seguro</label>
              <select 
                id="tipo_seguro" 
                name="tipo_seguro" 
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                required
              >
                <option value="">Selecciona un tipo de seguro</option>
                <option value="vehiculo">Seguro de Vehículo</option>
                <option value="vida">Seguro de Vida</option>
                <option value="patrimonial">Seguro Patrimonial</option>
              </select>
            </div>
            <div class="md:col-span-2 space-y-2">
              <label class="text-sm font-medium text-gray-700" for="mensaje">Mensaje</label>
              <textarea 
                id="mensaje" 
                name="mensaje" 
                rows="4" 
                class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200"
                placeholder="Tu mensaje"
                required
              ></textarea>
            </div>
            <div class="md:col-span-2">
              <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors duration-300">
                Enviar consulta
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const faqItems = document.querySelectorAll('.faq-item');

  faqItems.forEach((item) => {
    const button = item.querySelector('.faq-button');
    const answer = item.querySelector('.faq-answer');

    button?.addEventListener('click', () => {
      const isOpen = item.classList.contains('active');

      // Cerrar todos los items
      faqItems.forEach((otherItem) => {
        otherItem.classList.remove('active');
        const otherAnswer = otherItem.querySelector('.faq-answer');
        if (otherAnswer) {
          otherAnswer.style.maxHeight = '0px';
        }
      });

      // Abrir/cerrar el item actual
      if (!isOpen) {
        item.classList.add('active');
        if (answer) {
          answer.style.maxHeight = answer.scrollHeight + 'px';
        }
      }
    });
  });
});
</script>

<style>
.faq-answer {
  max-height: 0;
  transition: max-height 0.3s ease-out;
}

.faq-item.active .faq-button i {
  transform: rotate(180deg);
}

.faq-item.active .faq-answer {
  max-height: 200px;
  transition: max-height 0.5s ease-in;
}

input:focus, textarea:focus, select:focus {
  outline: none;
  box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.2);
}
</style>
