<script is:inline>
  

  // FAQ functionality
  document.addEventListener("DOMContentLoaded", () => {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach((item) => {
      const button = item.querySelector(".faq-button");

      button?.addEventListener("click", () => {
        // Close all other items
        faqItems.forEach((otherItem) => {
          if (otherItem !== item) {
            otherItem.classList.remove("active");
          }
        });

        // Toggle current item
        item.classList.toggle("active");
      });
    });
  });
</script>

<style is:global>
  .faq-answer {
    max-height: 0;
    transition: max-height 0.3s ease-out;
  }

  .faq-item.active .faq-answer {
    max-height: 500px;
    transition: max-height 0.5s ease-in;
  }

  .faq-item.active .faq-button i {
    transform: rotate(180deg);
  }

  .scroll-top {
    position: fixed;
    visibility: hidden;
    opacity: 0;
    right: 1rem;
    bottom: 1rem;
    z-index: 99999;
    background-color: #147b96;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    transition: all 0.4s;
  }
  
  .scroll-top i {
    font-size: 24px;
    color: #fff;
    line-height: 0;
  }
  
  .scroll-top:hover {
    background-color: color-mix(in srgb, #147b96, transparent 20%);
    color: #0c0b09;
  }
  
  .scroll-top.active {
    visibility: visible;
    opacity: 1;
  }
</style>
