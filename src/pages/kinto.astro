    <!-- Beneficios -->
    <section class="py-24 px-4" data-aos="fade-up">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-3xl md:text-5xl font-bold text-[#147b96] mb-4">¿Por qué elegir 
            <span class="inline-block align-center">
              <img loading="lazy" src="/images/kinto/logo-kinto.svg" alt="KINTO" class="h-8 md:h-14"/>
            </span> ?
          </h2>
          <p class="text-xl text-gray-600">Las ventajas que nos hacen diferentes</p>
        </div>
