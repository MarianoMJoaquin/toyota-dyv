---
import Layout from '../layouts/Layout.astro';
---

<Layout title="KINTO | Toyota">
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center text-white">
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/50">
        <img src="/images/kinto-banner.jpeg" alt="KINTO Banner" class="w-full h-full object-cover -z-10" />
      </div>
      <div class="container mx-auto px-4 text-center z-10">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">Movilidad flexible para tu estilo de vida</h1>
        <p class="text-xl mb-8">Descubre una nueva forma de disfrutar tu vehículo con KINTO</p>
        <a href="#contacto" class="inline-block bg-[#147b96] hover:bg-[#1a94b4] text-white px-8 py-4 rounded-lg transition-colors duration-300">
          Conoce más
        </a>
      </div>
    </section>

    <!-- Servicios -->
    <section class="py-24 px-4">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">Nuestros Servicios</h2>
          <p class="text-xl text-gray-600">Descubre las diferentes opciones que KINTO tiene para ti</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {['One', 'Share', 'Fleet'].map((service) => (
            <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
              <img 
                src={`/images/${service.toLowerCase()}.webp`} 
                alt={`KINTO ${service}`}
                class="w-full h-48 object-cover rounded-lg mb-6"
              />
              <h3 class="text-2xl font-bold mb-4">KINTO {service}</h3>
              <p class="text-gray-600">
                {service === 'One' && 'Suscripción flexible de vehículos todo incluido'}
                {service === 'Share' && 'Comparte vehículos por horas o días'}
                {service === 'Fleet' && 'Soluciones de movilidad para empresas'}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Como Funciona -->
    <section class="bg-gray-50 py-24 px-4">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">¿Cómo Funciona KINTO?</h2>
          <p class="text-xl text-gray-600">Un proceso simple y transparente en solo tres pasos</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            {
              icon: 'ri-car-line',
              title: 'Elige tu Plan',
              desc: 'Selecciona entre nuestra amplia gama de vehículos Toyota'
            },
            {
              icon: 'ri-file-list-3-line',
              title: 'Completa tu Solicitud',
              desc: 'Proceso 100% digital sin papeleo'
            },
            {
              icon: 'ri-key-line',
              title: 'Recibe tu Vehículo',
              desc: 'Entrega donde lo necesites'
            }
          ].map((step, index) => (
            <div class="bg-white rounded-xl p-8 shadow-lg transition-all duration-300 hover:-translate-y-2">
              <div class="w-16 h-16 bg-[#147b96] rounded-full flex items-center justify-center mb-6 mx-auto">
                <i class={`${step.icon} text-2xl text-white`}></i>
              </div>
              <h3 class="text-xl font-bold mb-4 text-center">{step.title}</h3>
              <p class="text-gray-600 text-center">{step.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Beneficios -->
    <section class="py-24 px-4">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">¿Por qué elegir KINTO?</h2>
          <p class="text-xl text-gray-600">Las ventajas que nos hacen diferentes</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-exchange-line text-4xl text-[#147b96] mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Flexibilidad</h3>
            <p class="text-gray-600">Adapta tu plan según tus necesidades</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-tools-line text-4xl text-[#147b96] mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Todo Incluido</h3>
            <p class="text-gray-600">Mantenimiento, seguros y más</p>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <i class="ri-leaf-line text-4xl text-[#147b96] mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Sustentable</h3>
            <p class="text-gray-600">Comprometidos con el medio ambiente</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Estadísticas -->
    <section class="bg-[#147b96] text-white py-24 px-4">
      <div class="container mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">Nuestros Números</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center bg-white/5 p-8 rounded-lg">
            <i class="ri-group-line text-6xl mb-4 block"></i>
            <span class="text-5xl font-bold block mb-2">1000+</span>
            <p class="text-xl">Clientes Satisfechos</p>
          </div>

          <div class="text-center bg-white/5 p-8 rounded-lg">
            <i class="ri-car-line text-6xl mb-4 block"></i>
            <span class="text-5xl font-bold block mb-2">500+</span>
            <p class="text-xl">Vehículos Disponibles</p>
          </div>

          <div class="text-center bg-white/5 p-8 rounded-lg">
            <i class="ri-time-line text-6xl mb-4 block"></i>
            <span class="text-5xl font-bold block mb-2">24/7</span>
            <p class="text-xl">Soporte al Cliente</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonios -->
    <section class="py-24 px-4">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">Lo que Dicen Nuestros Clientes</h2>
          <p class="text-xl text-gray-600">Experiencias reales de usuarios KINTO</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl text-[#147b96] mb-4">❝</div>
            <p class="text-gray-600 mb-4">KINTO me ha permitido tener la flexibilidad que necesitaba sin preocuparme por el mantenimiento.</p>
            <div class="font-bold">María G.</div>
            <div class="text-gray-500">Cliente KINTO One</div>
          </div>
          <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:-translate-y-2">
            <div class="text-4xl text-[#147b96] mb-4">❝</div>
            <p class="text-gray-600 mb-4">Excelente servicio y atención al cliente. La mejor decisión para mi empresa.</p>
            <div class="font-bold">Carlos R.</div>
            <div class="text-gray-500">Cliente KINTO Fleet</div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="bg-gray-50 py-24 px-4">
      <div class="container mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">Preguntas Frecuentes</h2>
          <p class="text-xl text-gray-600">Resolvemos tus dudas sobre KINTO</p>
        </div>
        <div class="space-y-6">
          <details class="bg-white rounded-xl shadow-lg p-6">
            <summary class="cursor-pointer font-bold text-lg">¿Qué incluye la suscripción?</summary>
            <p class="text-gray-600 mt-4">La suscripción incluye mantenimiento, seguro, asistencia en carretera 24/7 y todos los servicios necesarios para tu movilidad sin preocupaciones.</p>
          </details>
          <details class="bg-white rounded-xl shadow-lg p-6">
            <summary class="cursor-pointer font-bold text-lg">¿Puedo cambiar de vehículo?</summary>
            <p class="text-gray-600 mt-4">Sí, dependiendo de tu plan, puedes cambiar de vehículo al renovar tu suscripción o en determinados períodos del año.</p>
          </details>
          <details class="bg-white rounded-xl shadow-lg p-6">
            <summary class="cursor-pointer font-bold text-lg">¿Cuál es el período mínimo de suscripción?</summary>
            <p class="text-gray-600 mt-4">Los períodos varían según el servicio, desde opciones por día hasta contratos anuales flexibles.</p>
          </details>
        </div>
      </div>
    </section>

    <!-- Contacto -->
    <section id="contacto" class="bg-gray-50 py-24 px-4">
      <div class="container mx-auto max-w-2xl">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-[#147b96] mb-4">Contáctanos</h2>
          <p class="text-xl text-gray-600">Estamos aquí para ayudarte</p>
        </div>
        <form class="space-y-6">
          <input type="text" placeholder="Nombre" required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#147b96] focus:border-transparent"
          />
          <input type="email" placeholder="Email" required
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#147b96] focus:border-transparent"
          />
          <input type="tel" placeholder="Teléfono"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#147b96] focus:border-transparent"
          />
          <select class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#147b96] focus:border-transparent">
            <option value="">Selecciona un servicio</option>
            <option value="kinto-one">KINTO One</option>
            <option value="kinto-share">KINTO Share</option>
            <option value="kinto-fleet">KINTO Fleet</option>
          </select>
          <textarea placeholder="Mensaje" required rows="4"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#147b96] focus:border-transparent"
          ></textarea>
          <button type="submit"
            class="w-full bg-[#147b96] hover:bg-[#1a94b4] text-white font-bold py-4 px-6 rounded-lg transition-colors duration-300"
          >
            Enviar
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout>

<script>
  const stats = document.querySelectorAll('.stat-number[data-target]');
    
  const animateValue = (obj: HTMLElement, start: number, end: number, duration: number) => {
    let startTimestamp: number | null = null;
    const step = (timestamp: number) => {
      if (!startTimestamp) startTimestamp = timestamp;
      const progress = Math.min((timestamp - startTimestamp) / duration, 1);
      obj.innerHTML = Math.floor(progress * (end - start) + start) + '+';
      if (progress < 1) {
        window.requestAnimationFrame(step);
      }
    };
    window.requestAnimationFrame(step);
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        if (entry.target.hasAttribute('data-target')) {
          const element = entry.target as HTMLElement;
          const target = element.getAttribute('data-target');
          if (target) {
            animateValue(element, 0, parseInt(target), 2000);
          }
        }
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal-on-scroll, .stat-number[data-target]').forEach((el) => observer.observe(el));
</script>
