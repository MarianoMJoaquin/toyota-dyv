          >
            <i class="ri-leaf-line text-4xl text-[#147b96] mb-4"></i>
            <h3 class="text-2xl font-bold mb-4">Sustentable</h3>
            <p class="text-gray-600">Comprometidos con el medio ambiente</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Estadísticas -->
    <section data-aos="fade-up" class="bg-[#147b96] text-white py-24 px-4">
      <div class="container mx-auto">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
