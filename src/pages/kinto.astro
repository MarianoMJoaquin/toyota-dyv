---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="KINTO | Toyota" theme_color='#147b96' image="https://www.kinto-mobility.com/images/service-logos/logo-kinto.svg">
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center text-white">
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/50">
        <!--<img src="/images/kinto/kinto-banner.jpeg" alt="KINTO Banner" class="w-full h-full object-cover -z-10 ukiyo" /> -->
        <Image
          src="/images/kinto/kinto-banner.jpeg"
          alt="KINTO Banner"
          class="w-full h-full object-cover -z-10 ukiyo"
          width={1920}
          height={1080}
          loading={'lazy'}
          decoding={'async'}
        />
      </div>
      <div data-aos="fade-up" class="container mx-auto px-4 text-center z-10">
