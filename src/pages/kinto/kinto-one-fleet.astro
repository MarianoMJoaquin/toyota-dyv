<script is:inline>
    // Smooth scroll functionality
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
  </script>

<style is:global>
    .scroll-top {
      position: fixed;
      visibility: hidden;
      opacity: 0;
      right: 1rem;
      bottom: 1rem;
      z-index: 99999;
      background-color: #147b96;
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      transition: all 0.4s;
    }
    
    .scroll-top i {
      font-size: 24px;
      color: #fff;
      line-height: 0;
    }
    
    .scroll-top:hover {
      background-color: color-mix(in srgb, #147b96, transparent 20%);
      color: #0c0b09;
    }
    
    .scroll-top.active {
      visibility: visible;
      opacity: 1;
    }
  </style>