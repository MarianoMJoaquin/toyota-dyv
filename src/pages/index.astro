---
import { Picture } from 'astro:assets';
import Layout from '../layouts/Layout.astro';

//SVGs
import ServiceSVG from '../assets/images/svg_service.svg';
import CotizadorSVG from '../assets/images/svg_cotizador.svg';
import ModelosSVG from '../assets/images/svg_modelos.svg';
import RepuestosSVG from '../assets/images/svg_repuestos.svg';



import SwiperUsados from '../components/SwiperUsados';
import ModelosTabSliderComponent from '../components/ModelosTabSliderComponent.jsx';

import srcBannerimg from "../assets/images/banner-index.avif";
import Slider from '../components/Slider.astro';
import srcKinto from "../assets/images/kinto3.webp";
import srcGR from "../assets/images/gr.webp";
import srcTSC from "../assets/images/toyota-servicios-conectados.webp";
---

<Layout title="Toyota | Derka y Vargas" theme_color="#FFFFFF" image='https://i.imgur.com/AabFmC0.png'>

	<main class="main">
  
		<section class="home" id="home">
		  <Slider groupId={9}/>
		</section>
  
		<section class="vehicles section" id="catalog">
		  <div class="container">
			<h1 class="vehicles__title heading-1">Explorar los vehículos</h1>
  
			<div class="vehicles__catalog catalog">
				<ModelosTabSliderComponent client:load />
			</div>

		  </div>
		</section>
  
		<section class="services section">
		  <div class="container">
			<h1 class="about__title heading-1">¿En qué podemos ayudarte?</h1>
  
			<div class="services__container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
			  <div class="services__content">
				<!--<Image src={ServiceSVG} alt="Svg de Service" class="services__img"/> -->
				<img src={ServiceSVG.src} alt="Svg de Service" class="services__img" loading="lazy" decoding="async"/>
				<a href="/servicio#contacto" >
				  <h3 class="services__title">Solicitar un servicio</h3>
				</a>
			  </div>
  
			  <div class="services__content">
				<!--<Image src={CotizadorSVG} alt="Svg de Cotizador" class="services__img"/> -->
				<img src={CotizadorSVG.src} alt="Svg de Cotizador" class="services__img" loading="lazy" decoding="async"/>
				<a href="https://dyv.e.toyota.com.ar/inventory">
				  <h3 class="services__title">Personalizar y cotizar</h3>
				</a>
  
				<span class="border"></span>
			  </div>
  
			  <div class="services__content">
				<!--<Image src={ModelosSVG} alt="Svg de Modelos" class="services__img"/> -->
				<img src={ModelosSVG.src} alt="Svg de Modelos" class="services__img" loading="lazy" decoding="async"/>
				<a href="/modelos/">
				  <h3 class="services__title">Ver modelos nuevos</h3>
				</a>
			  </div>
  
			  <div class="services__content">
				<!--<Image src={RepuestosSVG} alt="Svg de Respuestos" class="services__img"/> -->
				<img src={RepuestosSVG.src} alt="Svg de Respuestos" class="services__img" loading="lazy" decoding="async"/>
				<a href="/accesorios/">
				  <h3 class="services__title ml-1">Ver Repuestos y Accesorios</h3>
				</a>
			  </div>
			</div>
		  </div>
		</section>
		
		<section class="section">
			<div class="relative w-full">
				<picture>
					<source
						srcset={`${srcBannerimg.src}?w=400 400w,
								${srcBannerimg.src}?w=800 800w,
								${srcBannerimg.src}?w=1200 1200w,
								${srcBannerimg.src}?w=1600 1600w`}
						sizes="(max-width: 400px) 400px,
							   (max-width: 800px) 800px,
							   (max-width: 1200px) 1200px,
							   1600px"
						type="image/webp"
					/>
					<img 
						src={srcBannerimg.src} 
						alt="Imagen de banner" 
						class="w-full object-cover h-[600px] md:h-[800px] lg:h[1200px] xl:h-full ukiyo" 
						loading="lazy" 
						decoding="async" 
						width="1600"
						height="900"
					/>
				</picture>
				<!--<img src={srcBannerimg.src} alt="Imagen de banner" class="w-full object-cover h-[400px] md:h-[800px] lg:h[1200px] xl:h-full ukiyo" loading="lazy" decoding="async" /> -->
				<div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
				<div class="absolute top-20 left-0 right-0 text-center px-4 sm:px-6 pb-6 sm:pb-8 md:pb-10 lg:pb-12" data-aos="fade-up">
					<h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-2 sm:mb-3 md:mb-4">
						Toyota Hilux
					</h1>
					<p class="text-white text-sm sm:text-base md:text-lg mb-2 sm:mb-3 md:mb-4">
						La pick-up más vendida de Argentina
					</p>
					<a 
						href="/modelos/hilux" 
						class="inline-block about__link text-sm sm:text-base md:text-lg"
					>
						Conocer más
					</a>
				</div>
			</div>
		</section>
		
		<!--======================= ABOUT =======================-->
		<section class="about section">
		  <div class="container">
			<!--<h1 class="about__title heading-1">
						  About Toyota
				</h1>-->
			<!--E toyota -->
			<div class="about__inner about__inner_company">
			  <div class="about__info">
				<h5 class="about__span">Conocé e-Toyota</h5>
				<h5 class="about__subtitle">Tu toyota a tu medida</h5>
				<div class="about__text text-base">
				  Buscá el modelo y versión que más te guste. Simulá tu
				  cotización entregando un usado o con financiación. Disfrutá de
				  la forma más rápida y simple de iniciar el camino a tu nuevo
				  Toyota.
				</div>
				<a class="about__link" href="https://dyv.e.toyota.com.ar/inventory"> Cotizá online ahora </a>
			  </div>
			  <div class="about__img-wrapper">
				<iframe loading="lazy" width="560" height="315" src="https://www.youtube.com/embed/ZC74ooNLpF8?si=TOdE5Zgu_Mzt0iJQ"
				  title="YouTube video player" frameborder="0"
				  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
				  referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
			  </div>
			</div>
			
			<!--Gazoo Racing -->
			<div class="about__inner about__inner_leadership">
			  <div class="about__info">
				<h5 class="about__span">Pushing the limits for better</h5>
				<h5 class="about__subtitle">Toyota Gazoo Racing Argentina</h5>
				<div class="about__text text-base">
				  Toyota Gazoo Racing representa el compromiso de Toyota de superar todos los límites para crear vehículos cada vez mejores.
				</div>
				<a class="about__link__gr" href="https://www.toyotagazooracing.com.ar/"> Conocer más </a>
			  </div>
			  <div class="about__img-wrapper">
				<img class=" ukiyo" src={srcGR.src} alt="Toyota Gazoo Racing" loading="lazy" decoding="async"  />
			  </div>
			</div>

			<!--Kinto Share -->
			<div class="about__inner about__inner_company">
			  <div class="about__info">
				<h5 class="about__span__kinto">Tené siempre un Toyota</h5>
				<h5 class="about__subtitle">Kinto</h5>
				<div class="about__text">
				  La solución de movilidad más conveniente, inteligente y confiable que se adapta a tus necesidades. Alquila un Toyota por el tiempo que quieras y en el lugar que más te convenga.
				</div>
				<a class="about__link__kinto" href="/kinto"> Conocer más </a>
			  </div>
			  <div class="about__img-wrapper">
				<img class="about__img ukiyo" src={srcKinto.src} alt="Kinto Share" loading="lazy" decoding="async" width="6000" height="4000" />
			  </div>
			</div>
		  </div>
		</section>
		<!-- Slider main container -->
  
		<section class="section">
			<div class="relative w-full">
				<picture>
					<source
						srcset={`${srcTSC.src}?w=400 400w,
								${srcTSC.src}?w=800 800w,
								${srcTSC.src}?w=1200 1200w,
								${srcTSC.src}?w=1600 1600w`}
						sizes="(max-width: 400px) 400px,
							   (max-width: 800px) 800px,
							   (max-width: 1200px) 1200px,
							   1600px"
						type="image/webp"
					/>
					<img 
						src={srcTSC.src} 
						alt="Imagen de banner" 
						class="w-full object-cover h-[600px] md:h-[800px] lg:h[1200px] xl:h-full ukiyo" 
						loading="lazy" 
						decoding="async" 
						width="1600"
						height="900"
					/>
				</picture>
				<!--<img src={srcBannerimg.src} alt="Imagen de banner" class="w-full object-cover h-[400px] md:h-[800px] lg:h[1200px] xl:h-full ukiyo" loading="lazy" decoding="async" /> -->
				<div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
				<div class="absolute top-20 left-0 right-0 text-center px-4 sm:px-6 pb-6 sm:pb-8 md:pb-10 lg:pb-12" data-aos="fade-up">
					<h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-2 sm:mb-3 md:mb-4">
						Servicios Conectados
					</h1>
					<p class="text-white text-sm sm:text-base md:text-lg mb-2 sm:mb-3 md:mb-4">
						Control, seguridad y conectividad en un solo lugar
					</p>
					<a 
						href="https://www.toyota.com.ar/mi-toyota/conectado" 
						class="inline-block about__link text-sm sm:text-base md:text-lg"
					>
						Conocer más
					</a>
				</div>
			</div>
		</section>

		<section class="section cards__container">
			<div class="container">
				<h1 class="vehicles__title heading-1">Explorar los vehículos usados</h1>
				<SwiperUsados client:load />
			</div>
		</section> 
	  </main>
</Layout>