---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';




interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="images/faviconn.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!--=============== REMIXICONS ===============-->
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
    />
    
    <!--<link rel="stylesheet" href="/css/aos/aos.css"> -->

     <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    
  </head>
  <body>
    
    <Header />
    <slot />
    <Footer />
    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
    <script src="../assets/js/main.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="../assets/aos/aos.js"></script>

    <script is:inline src="https://cdn.tailwindcss.com"></script>
    

  </body>
</html>
